}
@keyframes moveing
{
0% {
transform scale(1)
transform translateX(0px)
}
50%{
transform scale(1.1)
transform translateX(-2px)
}
70%{
transform scale(1.2)
transform translateX(-10px)
}
90%{
transform scale(1.1)
transform translateX(-2px)
}
100%{
transform scale(1)
transform translateX(0px)
}
}
