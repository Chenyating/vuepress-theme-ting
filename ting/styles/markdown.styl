// markdown文章样式重制
h1, h2, h3, h4, h5, h6 {
  border: 0;
  font-weight: normal;
  cursor: pointer;

  .header-anchor {
    opacity: 0 !important;
  }
}

h1 {
  font-size: 1.7em;
  margin: 1em auto;
  &:before {
    text-align: left;
    content: '《';
  }

  &:after {
    text-align: right;
    content: '》';
  }
}

h2 {
  font-size: 1.4em;
  margin: 1em auto;
  font-weight: bold;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;

  &:before {
    content: '';
    width: 0;
    height: 0;
    border: solid 0.5em #fda6bc;
    border-right: transparent 0.5em solid;
  }
}

h3 {
  text-align: left;
  font-size: 1.2em;
  font-weight: bold;
  margin: 1em auto;
}

h4 {
  text-align: left;
  font-size: 1em;
  font-weight: bold;
  margin: 1em auto;
}

blockquote {
  display: block;
  border: 1px dashed #62a7d8;
  font-size: 1em;
  line-height: 1.75em;
  color: #62a7d8;
  padding: 1em;
  text-indent: 2em;
}

p {
  text-indent: 2em;

  a {
    font-weight: bold;
    color: #fda6bc;
  }

  img {
    width: 100%;
    height: 100%;
  }
}

hr {
  border-top: 1px dashed #62a7d8;
  margin-top: 2em;
}

ul, ol {
  border: 1px dashed #fda6bc;
  border-left: 0;
  padding: 1em;
  margin: 1em;
  position: relative;

  li {
    ul, ol {
      border: 0;
      border-left: 0;
      padding: 0;
      margin: 0;
      text-indent: 1em;
    }

    img {
      max-width: 500px;
      max-height: 500px;
      object-fit: contain;
    }
  }
}